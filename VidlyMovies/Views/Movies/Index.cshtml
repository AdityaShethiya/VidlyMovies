            @Html.DisplayFor(modelItem => item.NumberInStock)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.MoviesId }) |
